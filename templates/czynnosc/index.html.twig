{% extends 'base.html.twig' %}

{% block title %}Czynności — {{ postepowanie.numer }}{% endblock %}

{% block body %}
    <div class="container py-4">

        <div class="d-flex flex-wrap gap-2 justify-content-between align-items-center mb-3">
            <div>
                <h1 class="h4 mb-1">Czynności</h1>
                <div class="text-muted small">
                    Postępowanie:
                    <strong>{{ postepowanie.numer }}</strong>
                    — {{ postepowanie.rodzaj }}
                </div>
            </div>

            <div class="d-flex gap-2">
                <a class="btn btn-outline-secondary"
                   href="{{ path('app_postepowanie_show', { id: postepowanie.id }) }}">
                    Wróć do postępowania
                </a>

                <a class="btn btn-primary"
                   href="{{ path('app_postepowanie_czynnosc_new', { postepowanie: postepowanie.id }) }}">
                    + Dodaj czynność
                </a>
            </div>
        </div>

        {# FLASH MESSAGES #}
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ label == 'success' ? 'success' : 'info' }} alert-dismissible fade show">
                    {{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            {% endfor %}
        {% endfor %}

        <div class="card shadow-sm">
            <div class="card-body p-0">

                <div class="table-responsive">
                    <table class="table table-striped table-hover align-middle mb-0">
                        <thead class="table-light">
                        <tr>
                            <th style="width: 220px;">Data</th>
                            <th>Typ</th>
                            <th>Miejsce</th>
                            <th style="width: 200px;" class="text-end">Akcje</th>
                        </tr>
                        </thead>

                        <tbody>
                        {% for c in czynnosci %}
                            <tr>
                                <td>
                                    <div class="fw-semibold">
                                        {{ c.getDataStart()
                                        ? c.getDataStart()|date('Y-m-d H:i')
                                        : '—'
                                        }}
                                    </div>

                                    <div class="text-muted small">
                                        {{ c.getDataKoniec()
                                        ? 'do ' ~ c.getDataKoniec()|date('H:i')
                                        : ''
                                        }}
                                    </div>
                                </td>

                                <td>
                                <span class="badge text-bg-primary">
                                    {{ c.getTyp() }}
                                </span>

                                    {% if c.isSpisRzeczyDozwolony() %}
                                        {% if c.getSpisRzeczy() and c.getSpisRzeczy()|length > 0 %}
                                            <span class="badge text-bg-success ms-2">
                                            Spis: TAK
                                        </span>
                                        {% else %}
                                            <span class="badge text-bg-secondary ms-2">
                                            Spis: —
                                        </span>
                                        {% endif %}
                                    {% endif %}
                                </td>

                                <td class="text-muted">
                                    {{ c.getMiejsceOpis()
                                    ? c.getMiejsceOpis()|u.truncate(80, '…')
                                    : '—'
                                    }}
                                </td>

                                <td class="text-end">
                                    <a class="btn btn-sm btn-outline-primary"
                                       href="{{ path('app_postepowanie_czynnosc_edit', {
                                           postepowanie: postepowanie.id,
                                           id: c.id
                                       }) }}">
                                        Edytuj
                                    </a>

                                    <form method="post"
                                          action="{{ path('app_postepowanie_czynnosc_delete', {
                                              postepowanie: postepowanie.id,
                                              id: c.id
                                          }) }}"
                                          class="d-inline"
                                          onsubmit="return confirm('Usunąć czynność?');">

                                        <input type="hidden" name="_token"
                                               value="{{ csrf_token('delete_czynnosc_' ~ c.id) }}">

                                        <button class="btn btn-sm btn-outline-danger">
                                            Usuń
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="4" class="text-center text-muted py-4">
                                    Brak czynności w tym postępowaniu.
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>

            </div>
        </div>

    </div>
{% endblock %}
