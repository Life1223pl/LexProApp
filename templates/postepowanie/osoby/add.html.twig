{% extends 'base.html.twig' %}

{% block title %}Dodaj osobę do postępowania{% endblock %}

{% block body %}
    <div class="container mt-4">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <div>
                <h1 class="mb-0">Dodaj osobę do postępowania</h1>
                <div class="text-muted small">Postępowanie: <strong>{{ postepowanie.numer }}</strong></div>
            </div>

            <a class="btn btn-outline-secondary" href="{{ path('app_postepowanie_osoby_index', {'id': postepowanie.id}) }}">← Wróć</a>
        </div>

        <div class="card">
            <div class="card-body">
                {{ form_start(form) }}

                <div class="mb-3">
                    {{ form_row(form.osoba) }}
                </div>

                <div class="mb-3">
                    {{ form_row(form.rola) }}
                </div>

                <div class="mb-3">
                    {{ form_row(form.stosunekDoPodejrzanego) }}
                </div>

                <div class="mb-3">
                    {{ form_row(form.stosunekDoPokrzywdzonego) }}
                </div>

                <div class="form-check mb-3">
                    {{ form_widget(form.pouczonyOdpowiedzialnoscKarna, { attr: { class: 'form-check-input' } }) }}
                    {{ form_label(form.pouczonyOdpowiedzialnoscKarna, null, { label_attr: { class: 'form-check-label' } }) }}
                    {{ form_errors(form.pouczonyOdpowiedzialnoscKarna) }}
                </div>

                <div class="mb-3">
                    {{ form_row(form.notatki) }}
                </div>

                <div class="d-flex gap-2">
                    <button class="btn btn-success" type="submit">Dodaj</button>
                    <a class="btn btn-outline-secondary" href="{{ path('app_postepowanie_osoby_index', {'id': postepowanie.id}) }}">Anuluj</a>
                </div>

                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
