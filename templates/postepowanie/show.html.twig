{% extends 'base.html.twig' %}

{% block title %}Postępowanie {{ postepowanie.numer }}{% endblock %}

{% block body %}
    <div class="container mt-4">


        <div class="d-flex justify-content-between align-items-start mb-4">
            <div>
                <h1 class="mb-1">
                    Postępowanie <span class="text-primary">{{ postepowanie.numer }}</span>
                </h1>

                <div class="text-muted small">
                    Rodzaj: <strong>{{ postepowanie.rodzaj }}</strong>
                    • Data wszczęcia:
                    <strong>{{ postepowanie.dataWszczecia ? postepowanie.dataWszczecia|date('Y-m-d') : '-' }}</strong>
                    •
                    {% if postepowanie.dataZakonczenia %}
                        Data zakończenia: <strong>{{ postepowanie.dataZakonczenia|date('Y-m-d') }}</strong>
                    {% else %}
                        <span class="badge bg-success">W toku</span>
                    {% endif %}
                </div>

                <div class="mt-2 d-flex flex-wrap gap-2 align-items-center">
                    <span class="badge bg-secondary">{{ postepowanie.status }}</span>

                    <span class="text-muted small">
                    Prowadzący: <strong>{{ postepowanie.prowadzacy }}</strong>
                </span>

                    {% if postepowanie.approvedBy %}
                        <span class="text-muted small">
                        • Zatwierdzone przez:
                        <strong>{{ postepowanie.approvedBy }}</strong>
                        {% if postepowanie.approvedAt %}
                            <span class="text-muted">({{ postepowanie.approvedAt|date('Y-m-d H:i') }})</span>
                        {% endif %}
                    </span>
                    {% endif %}
                </div>
            </div>

            <div class="d-flex gap-2 flex-wrap justify-content-end">
                <a class="btn btn-outline-secondary"
                   href="{{ path('app_postepowanie_index') }}">
                    ← Lista postępowań
                </a>

                <a class="btn btn-outline-primary"
                   href="{{ path('app_postepowanie_osoby_index', { id: postepowanie.id }) }}">
                    Osoby w postępowaniu
                </a>

                <a class="btn btn-success"
                   href="{{ path('app_postepowanie_osoby_add', { id: postepowanie.id }) }}">
                    + Dodaj osobę
                </a>

                <a class="btn btn-outline-warning"
                   href="{{ path('app_postepowanie_edit', { id: postepowanie.id }) }}">
                    Edytuj
                </a>
                <a class="btn btn-outline-primary"
                   href="{{ path('app_postepowanie_czynnosc_index', { postepowanie: postepowanie.id }) }}">
                    <i class="bi bi-list-check me-1"></i>
                    Czynności
                </a>

            </div>
        </div>


        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-success">{{ message }}</div>
            {% endfor %}
        {% endfor %}


        <div class="card shadow-sm mb-4">
            <div class="card-header bg-light">
                <strong>Szczegóły postępowania</strong>
            </div>

            <div class="card-body">
                <div class="row g-3">
                    <div class="col-md-6">
                        <div class="small text-muted">Numer</div>
                        <div class="fw-semibold">{{ postepowanie.numer }}</div>
                    </div>

                    <div class="col-md-6">
                        <div class="small text-muted">Rodzaj</div>
                        <div class="fw-semibold">{{ postepowanie.rodzaj }}</div>
                    </div>

                    <div class="col-md-4">
                        <div class="small text-muted">Data wszczęcia</div>
                        <div class="fw-semibold">
                            {{ postepowanie.dataWszczecia ? postepowanie.dataWszczecia|date('Y-m-d') : '-' }}
                        </div>
                    </div>

                    <div class="col-md-4">
                        <div class="small text-muted">Data zakończenia</div>
                        <div class="fw-semibold">
                            {{ postepowanie.dataZakonczenia ? postepowanie.dataZakonczenia|date('Y-m-d') : '— w toku —' }}
                        </div>
                    </div>

                    <div class="col-md-4">
                        <div class="small text-muted">Status</div>
                        <span class="badge bg-secondary">{{ postepowanie.status }}</span>
                    </div>

                    <div class="col-md-6">
                        <div class="small text-muted">Prowadzący</div>
                        <div class="fw-semibold">{{ postepowanie.prowadzacy }}</div>
                    </div>

                    <div class="col-md-6">
                        <div class="small text-muted">Zatwierdzone przez</div>
                        <div class="fw-semibold">
                            {% if postepowanie.approvedBy %}
                                {{ postepowanie.approvedBy }}
                                {% if postepowanie.approvedAt %}
                                    <span class="text-muted small">
                                    ({{ postepowanie.approvedAt|date('Y-m-d H:i') }})
                                </span>
                                {% endif %}
                            {% else %}
                                <span class="text-muted">—</span>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
        </div>


        <div class="card shadow-sm">
            <div class="card-header bg-light d-flex justify-content-between align-items-center flex-wrap gap-2">
                <div class="d-flex flex-column">
                    <strong>Osoby w postępowaniu</strong>

                    {% if przypisaneOsoby is defined %}
                        {# Liczniki ról w Twig #}
                        {% set total = przypisaneOsoby|length %}
                        {% set counts = {} %}

                        {% for po in przypisaneOsoby %}
                            {% set role = po.rola|default('INNA') %}
                            {% set current = counts[role]|default(0) %}
                            {% set counts = counts|merge({ (role): current + 1 }) %}
                        {% endfor %}

                        <div class="mt-1 d-flex flex-wrap gap-2 align-items-center">
                            <span class="badge bg-dark">Łącznie: {{ total }}</span>

                            {# wyświetlamy role posortowane alfabetycznie #}
                            {% for role, c in counts|sort %}
                                <span class="badge bg-primary">{{ role }}: {{ c }}</span>
                            {% endfor %}
                        </div>
                    {% endif %}
                </div>

                <div class="d-flex gap-2">
                    <a class="btn btn-sm btn-outline-primary"
                       href="{{ path('app_postepowanie_osoby_index', { id: postepowanie.id }) }}">
                        Zobacz listę
                    </a>
                    <a class="btn btn-sm btn-success"
                       href="{{ path('app_postepowanie_osoby_add', { id: postepowanie.id }) }}">
                        + Dodaj
                    </a>
                </div>
            </div>


            <div class="card-body p-0">
                {% if przypisaneOsoby is defined and przypisaneOsoby|length > 0 %}
                    <div class="table-responsive">
                        <table class="table table-striped table-hover align-middle mb-0">
                            <thead class="table-light">
                            <tr>
                                <th>Osoba</th>
                                <th>Rola</th>
                                <th>Pouczenie</th>
                                <th>Notatki</th>
                                <th class="text-end" style="width: 320px;">Akcje</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for po in przypisaneOsoby %}
                                <tr>
                                    <td class="fw-semibold">{{ po.osoba }}</td>

                                    <td>
                                        <span class="badge bg-primary">{{ po.rola }}</span>
                                    </td>

                                    <td>
                                        {% if po.pouczonyOdpowiedzialnoscKarna %}
                                            <span class="badge bg-success">TAK</span>
                                        {% else %}
                                            <span class="badge bg-secondary">NIE</span>
                                        {% endif %}
                                    </td>

                                    <td class="text-muted">{{ po.notatki ?: '-' }}</td>

                                    <td class="text-end">
                                        <div class="d-flex gap-2 justify-content-end flex-wrap">

                                            <a class="btn btn-sm btn-outline-secondary"
                                               href="{{ path('app_osoba_edit', {
                                                   id: po.osoba.id,
                                                   postepowanie: postepowanie.id
                                               }) }}">
                                                Edytuj dane osoby
                                            </a>

                                            <form method="post"
                                                  action="{{ path('app_postepowanie_osoby_delete', {
                                                      id: postepowanie.id,
                                                      osobaId: po.id
                                                  }) }}"
                                                  onsubmit="return confirm('Czy na pewno usunąć osobę z tego postępowania?');">
                                                <input type="hidden" name="_token"
                                                       value="{{ csrf_token('delete_postepowanie_osoba_' ~ po.id) }}">
                                                <button class="btn btn-sm btn-outline-danger">
                                                    Usuń z postępowania
                                                </button>
                                            </form>

                                        </div>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                {% else %}
                    <div class="p-4">
                        <div class="text-muted">
                            Brak osób przypiętych do postępowania.
                        </div>
                        <div class="mt-2">
                            <a class="btn btn-sm btn-success"
                               href="{{ path('app_postepowanie_osoby_add', { id: postepowanie.id }) }}">
                                + Dodaj pierwszą osobę
                            </a>
                        </div>
                    </div>
                {% endif %}
            </div>
        </div>

    </div>
{% endblock %}
