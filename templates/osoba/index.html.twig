{% extends 'base.html.twig' %}

{% block title %}Osoby{% endblock %}

{% block body %}
    <div class="container mt-4">

        <div class="d-flex justify-content-between align-items-center mb-3">
            <div>
                <h1 class="mb-0">Osoby</h1>
                <div class="text-muted small">Lista osób w systemie</div>
            </div>

            <div class="d-flex gap-2 flex-wrap">
                {% if postepowanieId %}
                    <a class="btn btn-outline-secondary"
                       href="{{ path('app_postepowanie_show', { id: postepowanieId }) }}">
                        ← Wróć do postępowania
                    </a>
                {% elseif referer %}
                    <a class="btn btn-outline-secondary" href="{{ referer }}">
                        ← Wróć
                    </a>
                {% endif %}

                <a class="btn btn-success"
                   href="{{ path('app_osoba_new', postepowanieId ? { postepowanie: postepowanieId } : {}) }}">
                    + Dodaj osobę
                </a>
            </div>
        </div>

        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-success">{{ message }}</div>
            {% endfor %}
        {% endfor %}

        <div class="card shadow-sm">
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-striped table-hover align-middle mb-0">
                        <thead class="table-light">
                        <tr>
                            <th style="width: 60px;">ID</th>
                            <th>Imię i nazwisko</th>
                            <th>PESEL</th>
                            <th>Telefon</th>
                            <th>Email</th>
                            <th class="text-end" style="width: 140px;">Akcje</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for o in osoby %}
                            <tr>
                                <td class="text-muted">{{ o.id }}</td>
                                <td class="fw-semibold">{{ o }}</td>
                                <td>{{ o.pesel ?: '-' }}</td>
                                <td>{{ o.telefon ?: '-' }}</td>
                                <td>{{ o.email ?: '-' }}</td>
                                <td class="text-end">
                                    <a class="btn btn-sm btn-outline-secondary"
                                       href="{{ path('app_osoba_edit',
                                           postepowanieId
                                           ? { id: o.id, postepowanie: postepowanieId }
                                           : { id: o.id }
                                       ) }}">
                                        Edytuj
                                    </a>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="6" class="text-center text-muted py-4">
                                    Brak osób w bazie.
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

    </div>
{% endblock %}
